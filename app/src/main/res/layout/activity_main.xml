<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background=""
tools:context=".MainActivity">

    <Button

    android:id="@+id/jobsButton"
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:layout_weight="1"
    android:text="JOBS"
    android:textColor="@android:color/black"
    android:textSize="30sp"
    android:background="@drawable/rc_blue"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="50dp" />

    <!--Button

        android:id="@+id/messagesButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:text="MESSAGES"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:background="@drawable/rc_green"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/jobsButton" /-->

    <Button

    android:id="@+id/emButton"
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:layout_weight="1"
    android:text="Employees and Managers"
    android:textColor="@android:color/black"
    android:textSize="30sp"
    android:background="@drawable/rc_red"
    android:layout_marginTop="75dp"
    android:layout_marginLeft="50dp"
        android:layout_below="@id/jobsButton" />

    <Button

        android:id="@+id/etButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:text="Equipment and Tools"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:background="@drawable/rc_yellow"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/emButton" />

    <Button
        android:id="@+id/goToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etButton"
        android:text="Login" />

    <android.support.design.widget.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/nav_items">

    </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>



